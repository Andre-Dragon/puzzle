doctype html
html(lang="ru") 
    head
        meta(charset="utf-8")
        title Puzzle
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="./css/reset.css")
        link(rel="stylesheet" href="./css/index.css")
    body
        - var values = new Array(16).fill(0).map((_item, index) => index + 1);
        .wrapper
            .preloader
                .loader 
                    span
                    span
                    span
                    span
            .container
                .app
                    h1.app__title «Пятнашки»
                    .app__discription 
                        p.app__rules Собери цифры по порядку
                        .app__box.hide
                            .app__total Ходов: 
                                span.app__indicator.app__counter#app__counter 0
                            .app__total Время: 
                                span.app__indicator.app__timer
                                    span.app__timer--minute#minute 00
                                    span :
                                    span.app__timer--second#second 00
                                    span :
                                    span.app__timer--millisecond#millisecond 00
            
                    .app__puzzle#app__puzzle
                            .app__puzzle--overlay
                                each val in values
                                    button.app__puzzle--btn(data-matrix-id=val)
                                        span.app__puzzle--item=val

                                .app__puzzle--lock#app__puzzle--lock 
                                    .app__puzzle--box
                                        .app__puzzle--header 
                                            .app__puzzle--name Результат
                                            .app__puzzle--name Ходов
                                            .app__puzzle--name Время
                                        .app__puzzle--main
                                            .app__puzzle--current 
                                                .app__puzzle--result Текущий
                                                .app__puzzle--result.app__puzzle--total#app__result--count 0
                                                .app__puzzle--result.app__puzzle--total#app__result--time 00:00:00
                                            .app__puzzle--current.app__record
                                                .app__puzzle--result Рекорд
                                                .app__puzzle--result.app__puzzle--total#app__record--count 0
                                                .app__puzzle--result.app__puzzle--total.app__record--time#app__record--time 00:00:00
                                    button.app__puzzle--shuffle#app__shuffle Играть
                            .app__puzzle--public Новый рекорд

        script(src="./js/index.js")
