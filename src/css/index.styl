@import url('https://fonts.googleapis.com/css2?family=Open+Sans&family=Playfair+Display:wght@400;600&display=swap');

body,
html 
{
    font 16px/1.4 'Open Sans', sans-serif;
    font-weight 400;
	line-height 1.5;
    background: linear-gradient(90deg, #11053b, #1e0b63, #11053b);
    color rgb(250, 255, 175);
    -ms-user-select none;
    -moz-user-select none;
    -webkit-user-select none;
    user-select none;
    -webkit-tap-highlight-color transparent;
}
.wrapper
{
    width 100%;
    height 100vh;
}
.preloader
{
    display flex;
    align-items center;
    justify-content center;
    position fixed;
    top 0;
    left 0;
    right 0;
    bottom 0;
    width 100%;
    height 100%;
    z-index 9999;
    background: linear-gradient(90deg, #11053b, #1e0b63, #11053b);
    visibility visible;
    opacity 1;
    transition 0.5s;
}
.loader {
    width 50px;
    height 50px;
    position relative;
    animation loader 2s infinite ease-in-out;

    & span {
        width 50px;
        height 50px;
        position absolute;
        left 0;
        top 0;
        border 4px solid #fff;
    }

    & span:nth-child(1) 
    {
        animation span-1 2s ease-in-out infinite;
    }

    & span:nth-child(2) 
    {
        animation span-2 2s ease-in-out infinite;
    }

    & span:nth-child(3) 
    {
        animation span-3 2s ease-in-out infinite;
    }

    & span:nth-child(4) 
    {
        animation span-4 2s ease-in-out infinite;
    }
}
.container
{
    display flex;
    align-items center;
    justify-content center;
    max-width 420px;
    min-width 320px;
    min-height 100vh;
    margin 0 auto;
    padding 2rem;
}
.app
{
    display flex;
    flex-direction column;
    align-items center;
    justify-content center;
    flex 1 1 auto;

    &__title 
    {
        font 2.5rem/1.2 'Playfair Display', serif;
        font-weight 600;
        text-align center;
        margin-bottom 1rem;
    }

    &__discription
    {
        display flex;
        align-items center;
        justify-content center;
        max-width 300px;
        width 100%;
        height 28px;
        position relative;
    }

    &__rules,
    &__box 
    {
        position absolute;
        left 0;
        top 0;
        width 100%;
        height 100%;
        z-index 10;
        opacity 1;
        transition 0.5s;
    }

    &__rules
    {
        text-align center;
    }

    &__box
    {
        display flex;
        align-items center;
        justify-content space-around;
        width 100%;
        height 28px;
    }

    &__total
    {
        font 1rem 'Open Sans', sans-serif;
        font-weight 400;
        text-align center;
    }

    &__indicator
    {
        display inline-flex;
        font 1.125rem 'Playfair Display', serif;
        font-weight 600;
        line-height 1.6;
    }

    &__counter 
    {
        width 50px;
    }

    &__timer
    {
        width 86px;
    }

    &__puzzle
    {
        width 100%;
        padding-bottom 100%;
        margin 1.2rem 0;
        background rgb(250, 255, 175);
        background-position center;
        box-shadow 0 0 2px rgb(250, 255, 175),
                    2px 2px 4px rgb(0, 0, 0),
                    2px -2px 4px rgb(0, 0, 0),
                    -2px 2px 4px rgb(0, 0, 0),
                    -2px -2px 4px rgb(0, 0, 0);
        position relative;
    }

    &__puzzle--lock
    {
        position absolute;
        top 0;
        left 0;
        width 100%;
        height 100%;
        z-index 1000;
        background rgba(0, 0, 0, .8);
        display flex;
        align-content center;
        justify-content center;
        flex-wrap: wrap;
        transition: 0.5s;
        padding 2%;
    }

    &__puzzle--box 
    {
        width 100%;
        border 1px solid rgb(250, 255, 175);
        background: linear-gradient(90deg, #000000, #230b10, #331016, #230b10, #000000);
    }

    &__puzzle--header,
    &__puzzle--current
    {
        display flex;
        align-items center;
        justify-content center;
        width 100%;
        padding 10px 0;
    }

    &__puzzle--header
    {
        border-bottom: 1px solid rgb(250, 255, 175);
    }

    &__puzzle--name:not(:last-child),
    &__puzzle--result:not(:last-child)
    {
        border-right 1px solid rgb(250, 255, 175);
    } 

    &__puzzle--name:not(:nth-child(2)),
    &__puzzle--result:not(:nth-child(2))
    {
        flex-basis 38%;
    }

    &__puzzle--name:nth-child(2),
    &__puzzle--result:nth-child(2)
    {
        min-width: 60px;
        flex-basis 24%;
    }

    &__puzzle--name,
    &__puzzle--result  
    {
        font-size 1rem;
        text-align center;
    }

    &__puzzle--name
    {
        font-weight 600;
    }

    &__puzzle--main
    {
        width 100%;
    }

    &__puzzle--current:not(:last-child)
    {
        border-bottom 1px solid rgb(250, 255, 175);
    }

    &__puzzle--total
    {
        font 1.125rem 'Playfair Display', serif;
    }

    &__puzzle--shuffle
    {
        font 1.125rem/1.4 'Open Sans', sans-serif;
        font-weight 400;
        margin-top 1.325rem;
        padding 0.5rem 2rem;
        background: linear-gradient(90deg, #000000, #230b10, #331016, #230b10, #000000);
        color rgb(250, 255, 175);
        border 1px solid rgb(250, 255, 175);
        border-radius 2px;
        position relative;
        overflow hidden;
        z-index 1;

        &:before
        {
            content '';
            width 0%;
            height 100%;
            position absolute;
            top 50%;
            left 50%;
            transform translate(-50%,-50%);
            z-index -1;
            background: linear-gradient(0deg, #000000, #230b10, #331016, #230b10, #000000);
            transition all .5s ease;
        }

        &:hover:before
        {
            width 100%;
        }
    }

    &__puzzle.won 
    {
        .app__puzzle--item
        {
            box-shadow inset 0 0 6px rgb(180, 21, 87);
        }
    }

    &__puzzle--btn 
    {
        position absolute;
        top 0;
        left 0;
        width 25%;
        height 25%;
        font 2rem/1.4 'Playfair Display', serif;
        font-weight 400;
        background: linear-gradient(90deg, #000000, #230b10, #331016, #230b10, #000000);
        color rgb(250, 255, 175);
        box-shadow inset 0 0 2px rgb(250, 255, 175);
        transition transform .2s;
    }

    &__puzzle--item 
    {
        display flex;
        align-items center;
        justify-content center;
        width 80%;
        height 80%;
        margin 10%;
        box-shadow inset 0 0 6px rgb(252, 192, 27);
    }
}

.hide 
{
    opacity 0;
    visibility hidden;
}

@keyframes loader 
{
    0% { 
        transform rotate(-45deg); 
    }
    50% { 
        transform rotate(-135deg); 
    }
    100% { 
        transform rotate(-225deg); 
    }
}

@keyframes span-1 
{
    0%, 100% { 
        transform translate(0); 
    }
    50% { 
        transform translate(-50px, 0); 
        border-color #EE4D68; 
    }
}

@keyframes span-2 
{
    0%, 100% { 
        transform translate(0); 
    }
    50% { 
        transform translate(50px, 0); 
        border-color #875678; 
    }
}

@keyframes span-3 
{
    0%, 100% { 
        transform translate(0); 
    }
    50% { 
        transform:translate(0, -50px); 
        border-color #FF9900; 
    }
}

@keyframes span-4 
{
    0%, 100% { 
        transform translate(0); 
    }
    50% { 
        transform translate(0, 50px); 
        border-color #00E4F6; 
    } 
}



